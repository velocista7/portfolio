<!-- Mobile 햄버거메뉴 -->
<div id="slide-menu">

  <div class="tit">
    <a href="#" id="slide-close"></a>
  </div>

  <!-- tnb -->
  <ul id="tnb-mo">

    {% if mb_level > 1 %}
      <li class="login">
        <a href="{{ process_url }}/member/member_logout.php">{{ lan['로그아웃'] }}</a>
      </li>

      <li class="join">
        <a href="{{ subpage }}/member/join?viewMode=modify">{{ lan['정보수정'] }}</a>
      </li>

    {% else %}
      <li><a href="{{ subpage }}/member/login">{{ lan['로그인'] }}</a></li>
      <li><a href="{{ subpage }}/member/join">{{ lan['회원가입'] }}</a></li>
    {% endif %}

    <li>
      <a href="#" data-ajaxpop="{{ subpage }}/popup/sitemap">SITEMAP</a>
    </li>

  </ul>

  <!-- gnb -->
  <ul id="gnb-mo">
   {% include "components/gnb.config.njk" %}
  </ul>
