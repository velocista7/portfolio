<!-- PC, Mobile 공통 header -->
<header id="header">
  <div class="inner">

    <!-- logo -->
    <h1 class="logo">
      <a href="{{ site.dir }}/">
        <span class="text">CSR</span>
        {# <img src="{{ site.dir }}/images/layout/deep-logo.png" alt=""> #}
      </a>
    </h1>

    <!-- gnb -->
    <ul id="gnb">
      {% include "components/gnb.config.njk" %}
    </ul>

    <!-- slide button -->
    <div id="slide-btn">
      <button title="Open menu"><span></span></button>
    </div>

  </div>
